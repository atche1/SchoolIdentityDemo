@model List<SchoolIdentityDemo.Models.ViewModels.UserRoleRowViewModel>
@{ 
    ViewData["Title"] = "Управление на роли"; 
} 
 
<h1>@ViewData["Title"]</h1> 
 
<table class="table table-striped"> 
    <thead> 
        <tr> 
            <th>Email</th> 
            <th>Роля</th> 
            <th></th> 
        </tr> 
    </thead> 
    <tbody> 
        @foreach (var u in Model) 
        { 
            <tr> 
                <td>@u.Email</td> 
                <td>@(u.Role ?? "(няма)")</td> 
                <td> 
                     <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@u.UserId">Edit</a>  
                </td> 
            </tr> 
        } 
    </tbody> 
</table>