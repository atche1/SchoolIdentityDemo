@model SchoolIdentityDemo.Models.TeacherProfile
@{
    ViewData["Title"] = "Моят Teacher профил";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}

<form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UserId" />

    <div class="mb-3">
        <label class="form-label">Предмет</label>
        <input class="form-control" asp-for="Subject" />
        <span class="text-danger" asp-validation-for="Subject"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Кабинет</label>
        <input class="form-control" asp-for="Room" />
        <span class="text-danger" asp-validation-for="Room"></span>
    </div>

    <button class="btn btn-success" type="submit">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
